# Perform common tasks like Load configurations and initializations
bin=`dirname "$0"`
. "$bin"/common.sh

# Get the bigframe base dir
OLD_PATH=$PWD
cd $bin
cd ..
BASE_PATH=$PWD
cd $OLD_PATH

QGEN_CLASSPATH=$QGEN_JAR
QGEN_CLASSPATH+=:$WORKFLOWS_JAR

