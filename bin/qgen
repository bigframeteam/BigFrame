#	done
#fi

#if [ -n "$VERTICA_HOME" ]; then
#	for jar in `find $VERTICA_HOME/java/lib -name '*.jar'`; do
#		QGEN_CLASSPATH+=:$jar
#	done
#fi

#if [ -n "$SPARK_HOME" ]; then
##	for jar in `find $SPARK_HOME/assembly/target/$SPARK_SCALA_VERSION -name 'spark*.jar'`; do
##		QGEN_CLASSPATH+=:$jar
##	done
