<!--The benchmark specification-->
<configuration>

	<property>
		<name>bigframe.datavariety</name>
		<value>nested</value>
	</property>
	
	<property>
		<name>bigframe.datavolume</name>
		<value>small</value>
		<description>
			tiny: around 10GB
			small: around 100GB
			medium: around 1TB
			large: around 100TB
			extra large: around 1PB 
		</description>
	</property>
	
	<property>
		<name>bigframe.datavolume.relational.proportion</name>
		<value>1</value>
		<description>
			It is used to determine the proportion of relational dataset
			in terms of the whole data volume. 
		</description>
	</property>
	
	<property>
		<name>bigframe.datavolume.graph.proportion</name>
		<value>1</value>
	</property>
	
	<property>
		<name>bigframe.datavolume.nested.proportion</name>
		<value>1</value>
	</property>
	
	<property>
		<name>bigframe.datavolume.text.proportion</name>
		<value>1</value>
	</property>
	
	<property>
		<name>bigframe.datavelocity.relational</name>
		<value>0</value>
		<description>
			data velocity will only be use in data refreshing phase,
			only the continuous queries will be affected.
		</description>
	</property>
	
	<property>
		<name>bigframe.datavelocity.graph</name>
		<value>0</value>
	</property>
	
	<property>
		<name>bigframe.datavelocity.nested</name>
		<value>0.1</value>
		<description>
			The number of tweets each user sent per day.
		</description>
	</property>
	
	<property>
		<name>bigframe.datavelocity.text</name>
		<value>0</value>
	</property>
	
	<property>
		<name>bigframe.data.hdfspath.relational</name>
		<value>tpcds</value>
	</property>
	
	<property>
		<name>bigframe.data.hdfspath.graph</name>
		<value>twitter_graph</value>
	</property>
	
	<property>
		<name>bigframe.data.hdfspath.nested</name>
		<value>raw_tweets</value>
	</property>
	
	<property>
		<name>bigframe.data.hdfspath.text</name>
		<value>text</value>
	</property>
	
	<property>
		<name>bigframe.queryvariety</name>
		<value>simple</value>
	</property>
	
	<property>
		<name>bigframe.queryvelocity</name>
		<value>historical</value>
	</property>
	
	<property>
		<name>bigframe.queryvolume</name>
		<value>1</value>
	</property>
	
	
</configuration>