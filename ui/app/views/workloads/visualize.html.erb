    if (nodes[i].name=="INPUT"){
            var inp=i;
    }
  }
  nodes[inp].x=50;
  nodes[inp].y=height/2;
  nodes[inp].px = nodes[inp].x;
  nodes[inp].py = nodes[inp].y;
  nodes[inp].fixed=1;
